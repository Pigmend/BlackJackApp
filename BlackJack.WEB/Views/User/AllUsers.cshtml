@model IEnumerable<BlackJack.ViewModels.UserViewModel>

@{
    ViewBag.Title = "AllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>AllUsers</h2>
<body>
    <table>
        <tr>
            @foreach (var user in Model)
            {
                <td>
                    <table style="margin-left: 10px;">
                        <tr><td>@Html.DisplayFor(modelItem => user.ID)</td></tr>
                        <tr><td>@Html.DisplayFor(modelItem => user.Name)</td></tr>
                        <tr><td>@Html.ActionLink("Delete", "DeleteUser", new { id = user.ID })</td></tr>
                    </table>
                </td>
            }
        </tr>
    </table>
    <div class=" navbar navbar-inverse conteiner-borderStyle">
        <div class="container">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("New User", "SubmitNewUser", "User")</li>
                    <li>@Html.ActionLink("About", "CardTable", "User")</li>
                </ul>
            </div>
        </div>
    </div>
</body>